;-*-Lisp-*-

;; change the size of the window
(setq default-frame-alist '(
                (width . 140)
                (height . 55) ))

(add-to-list 'load-path "~/elisp/scala-emacs")
(require 'scala-mode-auto)

(add-hook 'scala-mode-hook
            '(lambda ()
	       (scala-mode-feature-electric-mode)
               ))

;; load the ensime lisp code...
(add-to-list 'load-path "~/elisp/ensime/src/main/elisp/")
(require 'ensime)

(add-to-list 'load-path "~/elisp/scala-emacs")
(add-to-list 'load-path "~/elisp/php-mode")
(require 'php-mode)

;; This step causes the ensime-mode to be started whenever
;; scala-mode is started for a buffer. You may have to customize this step
;; if you're not using the standard scala mode.
(add-hook 'scala-mode-hook 'ensime-scala-mode-hook)

(add-to-list 'load-path "~/elisp/helm")
(require 'helm-config)

;; turn on auto complete mode
(auto-complete-mode t)

;; turn on truncate long lines
(toggle-truncate-lines t)

(global-set-key (kbd "C-x C-M-f") 'find-file-in-project)

;; set up the mysql binary - this is for MAMP
(setq sql-mysql-program "/usr/local/bin/mysql")

;; set up textmate mode
(add-to-list 'load-path "~/elisp/textmate.el")
(require 'textmate)
(textmate-mode)

;; set up yasnippet
(add-to-list 'load-path
              "~/elisp/yasnippet")
(require 'yasnippet)
(yas/global-mode 1)

(custom-set-variables
 ;; custom-set-variables was added by Custom.
 ;; If you edit it by hand, you could mess it up, so be careful.
 ;; Your init file should contain only one such instance.
 ;; If there is more than one, they won't work right.
 '(custom-safe-themes (quote ("baed08a10ff9393ce578c3ea3e8fd4f8c86e595463a882c55f3bd617df7e5a45" default)))
 '(yas/snippet-dirs (quote ("/Users/sergio/elisp/yasnippet/snippets")) nil (yasnippet)))
(custom-set-faces
 ;; custom-set-faces was added by Custom.
 ;; If you edit it by hand, you could mess it up, so be careful.
 ;; Your init file should contain only one such instance.
 ;; If there is more than one, they won't work right.
 '(default ((t (:inherit nil :stipple nil :background "#fdf6e3" :foreground "#657b83" :inverse-video nil :box nil :strike-through nil :overline nil :underline nil :slant normal :weight normal :height 120 :width normal :foundry "apple" :family "Monaco")))))
